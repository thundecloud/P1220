{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for the application",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "shell:allow-open",
    {
      "identifier": "fs:read-all",
      "allow": [
        "$DOCUMENTS/**",
        "**"
      ]
    },
    {
      "identifier": "fs:write-all",
      "allow": [
        "$DOCUMENTS/**"
      ]
    },
    "fs:allow-read-dir",
    "fs:allow-read-file"
  ]
}